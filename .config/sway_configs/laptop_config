default_border none

#
# Status Bar:
#

bar {
       colors {
        background #007F00
        statusline #FFFFFF
        separator #000000

        focused_workspace  #00FF00 #00FF00 #000000
        active_workspace   #007F00 #007F00 #FFFFFF
        inactive_workspace #007F00 #007F00 #FFFFFF
        urgent_workspace   #007F00 #FF0000 #FFFFFF
        binding_mode       #2f343a #900000 #ffffff
    }
       font pango:RobotoMonoNerdFont Regular 12
        position top
        tray_output none
        status_command bumblebee-status -m pulsein pulseout brightness nic battery date time \
                -p time.format="%H:%M:%S" date.format="%A, %B %e, %Y" nic.states="^down" brightness.step=0 \
                pulsein.limit="100%" pulseout.limit="100%" \
                pulsein.percent_change="1%" pulseout.percent_change="1%" \
                pulsein.showbars=true pulseout.showbars=true \
                pulsein.showdevicename=true pulseout.showdevicename=true \
                pulseout.alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink="Speakers" \
                pulsein.alsa_input.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_6__source="Microphone" \
                -t clarks-theme
}
